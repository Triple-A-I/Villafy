@model VillaWeb.Models.Dto.Auth.RegistrationRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-6 offset-3 pb-2">
            <input asp-for="UserName" type="text" class="form-control" placeholder="username..." />
        </div>  
        <div class="col-6 offset-3 pb-2">
            <input asp-for="Name" type="text" placeholder="name..." class="form-control" />
        </div> 
        <div class="col-6 offset-3 pb-2">
            <input asp-for="Password" type="password" placeholder="password..." class="form-control" />
        </div> 
        <div class="col-6 offset-3 pb-2">
            <button type="submit" class="form-control btn-success"> Register</button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}