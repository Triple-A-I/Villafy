@model IEnumerable<VillaWeb.Models.Dto.VillaNumber.VillaNumberDto>

<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a class="btn btn-outline-primary" asp-action="CreateVillaNumber">Create New Villa Number</a>
        </div>
    </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Villa No</th>
                        <th>SpecialDetails</th>
                        <th>Name</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VillaNo</td>
                            <td>@item.SpecialDetails</td>
                            <td>@item.Villa.Name</td>
                            
                            <td>
                        <a class="btn btn-success" asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo">Update</a>
                        <a class="btn btn-danger" asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

</div>