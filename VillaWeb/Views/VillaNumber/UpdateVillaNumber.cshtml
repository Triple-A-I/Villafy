@model VillaWeb.Models.VM.VillaNumberUpdateVM


<form asp-action="UpdateVillaNumber" asp-controller="VillaNumber">
   
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa Number</h1>
        <hr />
        <input hidden asp-for="VillaNumber.VillaNo" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="pt-2 control-label " style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="VillaNumber.VillaNo" disabled class="form-control" />
                <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="pt-2 control-label " style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="4"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2 " style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <select asp-for="VillaNumber.VillaId" class="form-select" asp-items="Model.VillaList">
                    <option disabled selected> --Select Villa--</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>

            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}