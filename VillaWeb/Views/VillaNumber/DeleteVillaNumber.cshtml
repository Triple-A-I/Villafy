@model VillaWeb.Models.VM.VillaNumberDeleteVM


<form asp-action="DeleteVillaNumber" asp-controller="VillaNumber">

    <br />
    <input hidden asp-for="VillaNumber.VillaNo" />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />
        <div class="row">

            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="pt-2 control-label " style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="VillaNumber.VillaNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="pt-2 control-label " style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="VillaNumber.SpecialDetails" disabled class="form-control" rows="4"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2 " style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <select asp-for="VillaNumber.VillaId" disabled class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected> --Select Villa--</option>
                </select>

            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}